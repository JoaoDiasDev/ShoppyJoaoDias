@model PageDO

@{
}

<div class="row">
    @if (ViewBag.error != null)
    {
        <div class="alert">
            <div class="alert-danger">
                @ViewBag.error
            </div>
        </div>
    }
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Delete Page</h4>
                <div class="col-12">
                    Are you sure to delete @Model.Title page?
                    <br />
                    <br />
                    <br />
                    <form method="post">
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a asp-action="Index" class="btn btn-info">No</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>