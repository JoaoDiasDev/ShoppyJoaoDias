@model PageDO

@{
}
@section Head {
    <link href="~/admin/css/lib/html5-editor/bootstrap-wysihtml5.css" rel="stylesheet" />
}


<div class="row">
    @if (ViewBag.error != null)
    {
        <div class="alert">
            <div class="alert-danger">
                @ViewBag.error
            </div>
        </div>
    }
    <div class="col-lg-12">
        <div class="card" id="app">
            <div class="card-body">
                <h4 class="card-title">Create a new Page</h4>
                <form class="form-horizontal p-t-20" method="post">
                    <spinput asp-for="@Model.Title"></spinput>
                    <spinput asp-for="@Model.Slug"></spinput>
                    <spinput asp-for="@Model.Text" addclass="textarea_editor"></spinput>
                    <spbutton asp-value="Create"></spbutton>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <style type="text/css">
        .textarea_editor {
            height:200px;
        }
    </style>

    <script src="~/admin/js/lib/html5-editor/wysihtml5-0.3.0.js"></script>
    <script src="~/admin/js/lib/html5-editor/bootstrap-wysihtml5.js"></script>
    <script src="~/admin/js/lib/html5-editor/wysihtml5-init.js"></script>
}