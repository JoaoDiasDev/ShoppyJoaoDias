@model CityViewModel

@{

}

<div class="row">
    @if (ViewBag.error != null)
    {
        <div class="alert">
            <div class="alert-danger">
                @ViewBag.error
            </div>
        </div>
    }
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create a new City</h4>
                <form class="form-horizontal p-t-20" method="post">
                    <spinput asp-for="@Model.CityDO.Name"></spinput>
                    <spinput asp-for="@Model.CityDO.Slug"></spinput>
                    <spinput asp-for="@Model.CityDO.Order"></spinput>
                    <div class="form-group row">
                        <div class="control-label col-md-3">Select A Province</div>
                        <div class="col-md-6">
                            <select asp-for="@Model.CityDO.Provinceid" class="form-control">
                                <option value="">Please select a province</option>
                                @foreach (var item in Model.ProvinceDOList)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <spbutton asp-value="Create"></spbutton>
                </form>
            </div>
        </div>
    </div>
</div>
