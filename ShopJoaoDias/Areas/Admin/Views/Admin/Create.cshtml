@model AdminDO

@{
}

<div class="row">
    @if (ViewBag.error != null)
    {
        <div class="alert">
            <div class="alert-danger">
                @ViewBag.error
            </div>
        </div>
    }
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Admin</h4>
                <form class="form-horizontal p-t-20" method="post">
                    <div class="form-group row">
                        <label asp-for="@Model.Username" class="col-sm-3 control-label">Username</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="ti-user"></i></div>
                                <input type="text" class="form-control" asp-for="@Model.Username" placeholder="Username">
                                <span asp-validation-for="@Model.Username"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col-sm-3 control-label">Name</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="ti-user"></i></div>
                                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Name">
                                <span asp-validation-for="@Model.Name"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Surname" class="col-sm-3 control-label">Surname</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="ti-user"></i></div>
                                <input type="text" class="form-control" asp-for="@Model.Surname" placeholder="Surname">
                                <span asp-validation-for="@Model.Surname"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Email" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="ti-email"></i></div>
                                <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Enter email">
                                <span asp-validation-for="@Model.Email"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.Password" class="col-sm-3 control-label">Password</label>
                        <div class="col-sm-9">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="ti-lock"></i></div>
                                <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Enter password">
                                <span asp-validation-for="@Model.Password"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 control-label" asp-for="@Model.Confirmation"></label>
                        <div class="col-sm-9">
                            <div class="checkbox checkbox-success">
                                @*@Html.CheckBox("Confirmation",false,Model.Confirmation)*@
                                <input type="radio" asp-for="@Model.Confirmation" checked value="1"/>
                                <label asp-for="@Model.Confirmation">Is Active</label>
                            </div>
                            <div class="checkbox checkbox-success">
                                @*@Html.CheckBox("Confirmation",false,Model.Confirmation)*@
                                <input type="radio" asp-for="@Model.Confirmation" checked value="0" />
                                <label asp-for="@Model.Confirmation">DeActive</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row m-b-0">
                        <div class="offset-sm-3 col-sm-9">
                            <button type="submit" class="btn btn-info waves-effect waves-light">Create</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>