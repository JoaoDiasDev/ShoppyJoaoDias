    <script type="text/javascript">

        var mainv = new Vue({
            el: "header",
            data: {
                wishList: [],
                basket: [],
                productWish: 0,
                subtotal: 0
            },
            created: function () {
                axios.get("/Json/UserProperties").then(resp => {
                    var data = resp.data
                    this.wishList = data.wishListDOList
                    this.basket = data.basketList
                    this.totalCount()
                });
            },
            methods: {
                totalCount: function(){
                    this.basket.forEach(item => {
                        this.subtotal += item.piece * parseFloat(item.product.price);
                    });
                },
                addWishList: function(id){
                    alert(id)
                    axios.get("/Product/AddWishList" + id).then(resp => {
                        this.productWish=1
                    });
                },
                delWishList: function(id){
                    axios.get("/Product/DeleteWish" + id).then(resp => {
                        this.productWish=0
                    });
                }
            }
        })

    </script>

